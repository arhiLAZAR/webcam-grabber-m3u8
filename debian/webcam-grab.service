[Unit]
Description=Webcam grabber (mjpeg)
Wants=basic.target
After=basic.target network.target

[Service]
#User=ats-exporter
#Group=ats-exporter
ExecStart=/usr/bin/webcam_m3u8
StartLimitInterval=0

ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=always

Environment=LD_LIBRARY_PATH=/usr/local/ffmpeg/lib
WorkingDirectory=/etc/jpeg-convert
#CPUQuota=10%
#MemoryLimit=256M

[Install]
WantedBy=multi-user.target
